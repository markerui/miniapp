</template>

<script>
import wepy from 'wepy';
import Api from "../../utils/api";

export default class My extends wepy.page {
  config = {
    navigationBarTitleText: '个人中心',
    usingComponents: {
      'van-icon': '../../components/vant/icon/index',
      "van-row": "../../components/vant/row/index",
      "van-col": "../../components/vant/col/index",
      "van-cell": "../../components/vant/cell/index",
      "van-cell-group": "../../components/vant/cell-group/index",
      "van-button": "../../components/vant/button/index"
    }
  };

  components = {};

  mixins = [];

  data = {
    memberInfo: [],
    isLogin: false,
  };

  computed = {};

  methods = {
    getUserInfo(e) {
      var that = this;
      var reqData = {
        openId: that.$parent.globalData.weChatInfo.openId,
        encryptedData: e.detail.encryptedData,
        iv: e.detail.iv,
        unionid: that.$parent.globalData.weChatInfo.unionid
      };
      that.$parent.getUserInfo(reqData,function(res){
        that.isLogin = that.$parent.globalData.isLogin;
        that.$apply();
      });
    },
    goUserInfo(){
      wx.navigateTo({
        url: 'info'
      });
    },
    goYhq(){
      wx.navigateTo({
        url: '../card/couponList'
      });
    },
    goLpk(){
      wx.navigateTo({
        url: '../card/giftList'
      });
    }
  };

  events = {};

  GetMemberCenter(){
    var that = this;
    Api.GetMemberCenter(function(res){
      if(res.errCode >= 1000){
        Api.wxLogin(function(res) {
          if (res.resultData.tokenId) {
            that.GetMemberCenter();
          } else {
            Toast.fail(res.message);
          }
        });
      }else{
        if(res.result){
          that.memberInfo = res.resultData.memberInfo;
          that.$apply();
        } else {
          Toast.fail(res.message);
        }
      }
    });
  };

  onLoad() {
    var that = this;
    that.isLogin = that.$parent.globalData.isLogin;
    that.GetMemberCenter();
  }
}
</script>
