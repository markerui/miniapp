  <block wx:if="{{isLogin}}">
    <view class="user-head">
      <view class="user-head_title" bind:tap="goUserInfo">
        <view>
          <image src="{{memberInfo.headImg}}"></image>
        </view>
        <text class="user-head_name">{{memberInfo.nickName}} </text>
      </view>
      <van-row class="user-head_info">
        <van-col span="12">
          <view class="user-head_info_item" bindtap="goYhq">
            <text class="user-head_info_text">优惠券</text>
            <text class="user-head_info_num">{{memberInfo.couponCount}}</text>
          </view>
        </van-col>
        <van-col span="12">
          <view class="user-head_info_item" bindtap="goLpk" style="border:none;">
            <text class="user-head_info_text">礼品卡</text>
            <text class="user-head_info_num">{{memberInfo.giftCardCount}}</text>
          </view>
        </van-col>
      </van-row>
    </view>
  </block>
  <block wx:else>
     <view class="user-head">
      <van-button type="primary">授权登录</van-button>
    </view>
  </block>
  <!-- user-head end -->

  <view class="my-cell_list">
    
    <view class="van-cell-group_view">
      <block wx:if="{{!isLogin}}">
        <van-button
            class="hideLoginBtn"
            type="danger"
            size="large"
            lang="zh_CN"
            open-type="getUserInfo"
            bind:getuserinfo="getUserInfo"
        >授权</van-button>
      </block>
      <van-cell-group>
        <van-cell
          title="全部订单"
          icon="balance-list-o"
          url="../order/list"
          size="large" 
          is-link
        /></van-cell>
        <van-cell
          title="收货地址"
          icon="location-o"
          url="../address/index?f=1"
          size="large" 
          is-link
        /></van-cell>
      </van-cell-group>
    </view>

    <view class="van-cell-group_view">
      <block wx:if="{{!isLogin}}">
        <van-button
            class="hideLoginBtn"
            type="danger"
            size="large"
            lang="zh_CN"
            open-type="getUserInfo"
            bind:getuserinfo="getUserInfo"
        >授权</van-button>
      </block>
      <van-cell-group >
        <van-cell
          title="我的收藏"
          icon="star-o"
          url="collect"
          size="large" 
          is-link
        /></van-cell>
        <van-cell
          title="购物车"
          icon="cart-o"
          url="../cart/index?f=1"
          size="large" 
          is-link
        /></van-cell>
      </van-cell-group>
    </view>

    <view class="van-cell-group_view">
      <van-cell-group >
        <van-cell
          title="联系我们"
          icon="phone-o"
          size="large" 
          is-link
        /></van-cell>
      </van-cell-group>
    </view>
  </view>

